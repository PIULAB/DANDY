<Environment>
  <bkgndcolor>0.3 0.3 0.3</bkgndcolor>
  <Robot name="Dandy">
    <KinBody>
      <!-- plastic: <diffuseColor>0.25 0.39 0.47</diffuseColor> -->
      <!-- pipes:   <diffusecolor>0.85 0.84 0.85</diffusecolor> -->

      <Body name="base" type="dynamic">
        <Translation>{base_trans}</Translation>
        <Geom type="cylinder">
          <rotationaxis>0 0 0 90</rotationaxis>
          <radius>0.080</radius>
          <height>{base_height}</height> <!--119mm: height = real / 2 -->
          <diffuseColor>0.25 0.39 0.47</diffuseColor>
          <transparency>0.4</transparency>
        </Geom>
      </Body>

      <Body name="sh_yaw" type="dynamic">
        <offsetfrom>base</offsetfrom>
        <Translation>{sh_yaw_trans}</Translation>
        <Geom type="box">
          <Translation>{sh_yaw_box1_trans}</Translation>
          <Extents>{sh_yaw_box1_extent}</Extents>
          <diffusecolor>0.25 0.39 0.47</diffusecolor>
          <transparency>0.4</transparency>
        </Geom>
        <Geom type="box">
          <Translation>{sh_yaw_box2_trans}</Translation>
          <Extents>{sh_yaw_box2_extent}</Extents>
          <diffusecolor>0.25 0.39 0.47</diffusecolor>
          <transparency>0.4</transparency>
        </Geom>
      </Body>
      <Joint name="sh0" type="hinge">
        <Body>base</Body>
        <Body>sh_yaw</Body>
        <offsetfrom>sh_yaw</offsetfrom>
        <weight>4</weight>
        <limitsdeg>0 180</limitsdeg>
        <axis>0 1 0</axis>
        <maxvel>3</maxvel>
        <resolution>1</resolution>
      </Joint>

      <Body name="sh_roll" type="dynamic">
        <offsetfrom>sh_yaw</offsetfrom>
        <Translation>{sh_roll_trans}</Translation>
        <Geom type="box">
          <Translation>{sh_roll_box_trans}</Translation>
          <Extents>{sh_roll_box_extent}</Extents>
          <diffusecolor>0.85 0.84 0.85</diffusecolor>
          <transparency>0.4</transparency>
        </Geom>
      </Body>
      <Joint name="sh1" type="hinge">
        <Body>sh_yaw</Body>
        <Body>sh_roll</Body>
        <offsetfrom>sh_roll</offsetfrom>
        <weight>4</weight>
        <limitsdeg>0 180</limitsdeg>
        <axis>1 0 0</axis>
        <maxvel>3</maxvel>
        <resolution>1</resolution>
      </Joint>

      <Body name="elbow" type="dynamic">
        <offsetfrom>sh_roll</offsetfrom>
        <Translation>{elbow_trans}</Translation>
        <Geom type="box">
          <Translation>{elbow_box_trans}</Translation>
          <Extents>{elbow_box_extent}</Extents>
          <diffusecolor>0.85 0.84 0.85</diffusecolor>
          <transparency>0.4</transparency>
        </Geom>
      </Body>
      <Joint name="el0" type="hinge">
        <Body>sh_roll</Body>
        <Body>elbow</Body>
        <offsetfrom>elbow</offsetfrom>
        <weight>4</weight>
        <limitsdeg>0 180</limitsdeg>
        <axis>1 0 0</axis>
        <maxvel>3</maxvel>
        <resolution>1</resolution>
      </Joint>

      <Body name="wrist_yaw" type="dynamic">
        <offsetfrom>elbow</offsetfrom>
        <Translation>{wrist_yaw_trans}</Translation>
        <Geom type="box">
          <Translation>{wrist_yaw_box_trans}</Translation>
          <Extents>{wrist_yaw_box_extent}</Extents>
          <diffusecolor>0.25 0.39 0.47</diffusecolor>
          <transparency>0.4</transparency>
        </Geom>
      </Body>
      <Joint name="wr0" type="hinge">
        <Body>elbow</Body>
        <Body>wrist_yaw</Body>
        <offsetfrom>wrist_yaw</offsetfrom>
        <weight>4</weight>
        <limitsdeg>0 180</limitsdeg>
        <axis>1 0 0</axis>
        <maxvel>3</maxvel>
        <resolution>1</resolution>
      </Joint>


    </KinBody>
  </Robot>
</Environment>
